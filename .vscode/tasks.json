{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "watch",
      "problemMatcher": "$tsc-watch",
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "dependsOn": [
        "npm: watch:webview"
      ],
      "dependsOrder": "parallel",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "npm",
      "script": "watch:webview",
      "problemMatcher": [
        {
          "owner": "custom",
          "pattern": [
            {
              "regexp": ".+"
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": "vite v|building for production",
            "endsPattern": "watching for file changes"
          }
        }
      ],
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      }
    },
    {
      "type": "npm",
      "script": "compile",
      "problemMatcher": "$tsc",
      "group": "build"
    }
  ]
}
