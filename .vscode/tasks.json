{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-all",
      "type": "shell",
      "command": "bash",
      "args": [
        "-lc",
        "source ~/.nvm/nvm.sh && nvm use --lts >/dev/null && npm run build:webview && npm run compile"
      ],
      "problemMatcher": "$tsc",
      "presentation": {
        "reveal": "silent"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "watch",
      "type": "shell",
      "command": "bash",
      "args": [
        "-lc",
        "source ~/.nvm/nvm.sh && nvm use --lts >/dev/null && npm run watch"
      ],
      "problemMatcher": "$tsc-watch",
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "dependsOn": [
        "watch:webview"
      ],
      "dependsOrder": "parallel"
    },
    {
      "label": "watch:webview",
      "type": "shell",
      "command": "bash",
      "args": [
        "-lc",
        "source ~/.nvm/nvm.sh && nvm use --lts >/dev/null && npm run watch:webview"
      ],
      "problemMatcher": [],
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      }
    },
    {
      "label": "compile",
      "type": "shell",
      "command": "bash",
      "args": [
        "-lc",
        "source ~/.nvm/nvm.sh && nvm use --lts >/dev/null && npm run compile"
      ],
      "problemMatcher": "$tsc",
      "group": "build"
    }
  ]
}
