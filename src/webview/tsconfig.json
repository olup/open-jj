{
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["DOM", "ES2022"],
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "Bundler",
    "isolatedModules": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["react", "react-dom"]
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
